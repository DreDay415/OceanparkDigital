---
import EmailCollector from './EmailCollector';
import GoogleAuth from './GoogleAuth';
---

<section id="contact" class="py-24 relative overflow-hidden bg-slate-900 border-t border-white/5">
    <div class="absolute inset-0 bg-brand-gradient opacity-20 pointer-events-none"></div>
    <div class="container mx-auto px-6 relative z-10 text-center">
        <h2 class="text-4xl md:text-5xl font-bold font-display text-white mb-6 tracking-tight">Connect With Us</h2>
        <p class="text-xl text-slate-300 mb-12 max-w-2xl mx-auto font-light">
            Join the leading brands trusting Oceanpark Digital for their growth. Let's create something extraordinary together.
        </p>
        
        <div class="max-w-2xl mx-auto space-y-8">
            {/* Google OAuth Option */}
            <div>
                <p class="text-slate-400 text-sm mb-4 font-medium">Quick Sign In</p>
                <GoogleAuth client:load />
            </div>

            {/* Divider */}
            <div class="relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-slate-700"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-4 bg-slate-900 text-slate-500 font-medium">OR</span>
                </div>
            </div>

            {/* Email Collection Form */}
            <div>
                <p class="text-slate-400 text-sm mb-4 font-medium">Join Our Waitlist</p>
                <EmailCollector 
                    client:load
                    placeholder="Enter your email"
                    buttonText="Join Waitlist"
                    showName={true}
                />
            </div>
        </div>

        <p class="text-slate-400 text-sm mt-12">
            Or email us directly at{' '}
            <a 
                href="mailto:partnerships@oceanparkdigital.com"
                class="text-cyan-400 hover:text-cyan-300 transition-colors underline"
            >
                partnerships@oceanparkdigital.com
            </a>
        </p>
    </div>
</section>

<style>
    /* Cyberpunk Theme Overrides */
    :global(.cyberpunk) #contact {
        background-color: transparent !important;
    }
</style>
