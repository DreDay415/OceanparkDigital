---
import { services } from '../lib/data';
import { ArrowRight } from 'lucide-react';
---

<section id="services" class="py-24 bg-transparent relative">
    <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-cyan-200 to-purple-400 font-display mb-6">
                Ahead, by Design.
            </h2>
            <p class="text-lg text-slate-400">
                Future Proof Yourself <br />
                <span class="text-sm uppercase tracking-widest text-cyan-500/80">Legacy Logic: Built to Overclock and Outperform</span>
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.map((service) => (
                <div class="h-full group relative overflow-hidden text-slate-100 border border-white/10 rounded-xl bg-slate-800/50 hover:border-cyan-500/30 transition-all duration-300 p-8 flex flex-col">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-cyan-500/5 rounded-full blur-3xl -mr-16 -mt-16 transition-all group-hover:bg-cyan-500/10" />

                    <div class="relative z-10 flex flex-col h-full space-y-6">
                        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-indigo-600 to-cyan-500 flex items-center justify-center shadow-lg shadow-indigo-500/20 group-hover:scale-110 transition-transform">
                            <service.icon className="w-7 h-7 text-white" />
                        </div>

                        <div>
                            <h3 class="text-xl font-bold mb-2 font-display text-white group-hover:text-cyan-300 transition-colors">
                                {service.title}
                            </h3>
                            <p class="text-slate-300 leading-relaxed text-sm">
                                {service.description}
                            </p>
                        </div>

                        <div class="space-y-2">
                            <p class="text-[10px] uppercase tracking-[0.2em] text-cyan-500 font-bold">Core Skills</p>
                            <p class="text-xs text-slate-400 font-mono leading-tight whitespace-pre-line">
                                {service.skills}
                            </p>
                        </div>

                        <div class="mt-auto pt-6 border-t border-white/5">
                            <p class="text-[10px] uppercase tracking-[0.2em] text-purple-400 font-bold mb-2">Enterprise Metric</p>
                            <p class="text-xs italic text-slate-200 leading-relaxed border-l-2 border-purple-500/30 pl-3">
                                {service.metric}
                            </p>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>


