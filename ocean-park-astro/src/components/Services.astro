---
import { services } from '../lib/data';
import { ArrowRight } from 'lucide-react';
---

<section id="services" class="py-24 bg-slate-900 relative">
    <div class="container mx-auto px-6">
        <div class="max-w-3xl mx-auto text-center mb-16">
            <h2 class="text-3xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-cyan-200 to-purple-400 font-display mb-6">
                We Have a Passion for Creating Value
            </h2>
            <p class="text-lg text-slate-400">
                We proudly offer a broad range of services tailored to meet the unique needs of diverse businesses.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {services.map((service) => (
                <div class="h-full group relative overflow-hidden text-slate-100 border border-white/10 rounded-xl bg-slate-800/50 hover:border-cyan-500/30 transition-all duration-300 p-6">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-cyan-500/10 rounded-full blur-3xl -mr-16 -mt-16 transition-all group-hover:bg-cyan-500/20" />

                    <div class="relative z-10 flex flex-col h-full">
                        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-cyan-500 flex items-center justify-center mb-6 shadow-lg shadow-purple-500/20 group-hover:scale-110 transition-transform">
                            <service.icon className="w-6 h-6 text-white" />
                        </div>

                        <h3 class="text-xl font-bold mb-3 font-display text-white group-hover:text-cyan-300 transition-colors">
                            {service.title}
                        </h3>

                        <p class="text-slate-400 leading-relaxed mb-6 flex-grow">
                            {service.description}
                        </p>

                        <div class="flex items-center text-sm font-medium text-cyan-400 opacity-0 group-hover:opacity-100 transition-all -translate-x-2 group-hover:translate-x-0">
                            Learn more <ArrowRight className="w-4 h-4 ml-2" />
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    /* Cyberpunk Theme Overrides */
    :global(.cyberpunk) #services {
        background-color: transparent !important;
    }
</style>
